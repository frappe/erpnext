 "html": "<!DOCTYPE html>\r\n<head>\r\n\t<div >\r\n        <div class=\"letter-head\">\r\n                {{letter_head}}\r\n        </div>\r\n    </div>\r\n</head>\r\n\r\n<body>\r\n    <div class=\"body_one\">\r\n        <p style=\"font-weight:bold;font-size:18px;text-align:center\">PURCHASE INVOICE</p>\r\n        <p style=\"font-size:14px;text-align:center;text-decoration:underline\">{{ doc.branch }}</p>\r\n    </div>\r\n   \r\n   <div id=\"div_tab\">\r\n        <table id=\"div_tab\">\r\n            <tr>\r\n                <td><strong>Supplier:</strong></td>\r\n                <td>{{doc.supplier}}</td>\r\n                <td><strong>Invoice No:</strong></td>\r\n                <td>{{doc.name}}</td>\r\n            </tr>\r\n            <tr>\r\n                <td><strong>PO No:</strong></td>\r\n                <td>{{ doc.items[0].purchase_order }}</td>\r\n                <td><strong>Invoice Date:</strong></td>\r\n                <td>{{doc.posting_date}}</td>\r\n            </tr>\r\n            <tr>\r\n                <td><strong>PO Date:</strong></td>\r\n                <td>{{frappe.db.get_value(\"Purchase Order\",doc.items[0].purchase_order, \"transaction_date\") }}</td>\r\n                <td><strong>Supplier Invoice NO:</strong></td>\r\n                <td>{{doc.bill_no}}</td>\r\n            </tr>\r\n            <tr>\r\n                <td><strong>GRN No:</strong></td>\r\n                <td>{{ doc.items[0].purchase_receipt }}</td>\r\n                <td><strong>Supplier Invoice Date:</strong></td>\r\n                <td>{{doc.bill_date}}</td>\r\n            </tr>\r\n            <tr>\r\n                <td><strong>GRN Date:</strong></td>\r\n                <td>{{frappe.db.get_value(\"Purchase Receipt\",doc.items[0].purchase_receipt, \"posting_date\") }}</td>\r\n                <td><strong>Invoice Text:</strong></td>\r\n                <td>{{doc.title}}</td>\r\n            </tr>\r\n        </table>\r\n    </div>\r\n    <div class=\"body_two\">\r\n        <table class =\"table1\">\r\n            <tr id=\"col\">\r\n                <th id=\"col\"><strong>Sl No</strong></th>\r\n                <th id=\"col\"><strong>Item Code</strong></th>\r\n                <th id=\"col\"><strong>Item Name</strong></th>\r\n                <th id=\"col\"><strong>Item Group</strong></th>\r\n                <th id=\"col\"><strong>Qty Invoiced</strong></th>\r\n                <th id=\"col\"><strong>UOM</strong></th>\r\n                <th id=\"col\"><strong>Rate</strong></th>\r\n                <th id=\"col\"><strong>Amount Invoiced</strong></th>\r\n            </tr>\r\n            <tr id=\"col\">\r\n                {% for row in doc.items%}\r\n                <td id=\"col\">{{row.idx}}</td>\r\n                <td id=\"col\">{{row.item_code}}</td>\r\n                <td id=\"col\">{{row.item_name}}</td>\r\n                <td id=\"col\">{{row.item_group}}</td>\r\n                <td id=\"col\">{{row.qty}}</td>\r\n                <td id=\"col\">{{row.uom}}</td>\r\n                <td id=\"col\">{{row.rate}}</td>\r\n                <td id=\"col\">{{row.amount}}</td>\r\n            </tr>\r\n            {% endfor %}\r\n            <tr id=\"col\">\r\n                <td id=\"col\" colspan=\"7\" style=\"text-align:right;\">\r\n                    <b>Total:</b>\r\n                </td>S\r\n                <td id=\"col\">\r\n                    {{doc.total}}\r\n                </td>\r\n            </tr>\r\n        </table>\r\n    </div>\r\n    <div id=\"in_word\">\r\n        <strong>Amount in Words: </strong> Ngultrum {{ (doc.in_words)[3:] }}\r\n    </div>\r\n    <div style=\"padding-top: 100px; clear: both;\">\r\n        <div>Authorized Signatory</div>\r\n        <div style=\"padding-top: 80px; width: 33%; float: left; text-align:center;\">(Parked By)</div>\r\n        <div style=\"padding-top: 80px; width: 33%; float: left; text-align:center;\">(Verified By) </div>\r\n        <div style=\"padding-top: 80px; width: 33%; float: right; text-align:center;\">(Payment Receipt By)</div>\r\n    </div>\r\n    <div class=\"footer\">\r\n        {% if not no_letterhead and footer %}\r\n        <div class=\"letter-head-footer\">\r\n          {{ footer }}\r\n        </div>\r\n        {% endif %}\r\n        <p class=\"text-center small page-number visible-pdf\">\r\n            {{ _(\"Page {0} of {1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }}\r\n        </p>\r\n    </div>\r\n</body>",
